# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true

[{Makefile,GNUmakefile,GNUmakefile.preamble,GNUmakefile.postamble]
indent_style = tab

[**.plist]
insert_final_newline = false

[**.md]
trim_trailing_whitespace = true
x-soft-wrap-text = true
